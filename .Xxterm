! vim: set filetype=xdefaults :

XTerm*loginShell:          false
XTerm*locale:              true

XTerm*saveLines:           12000
XTerm*transparent:         false

XTerm*fastScroll:          True
XTerm*scrollBar:           false
XTerm*scrollBar.DrawBorder:false
XTerm*reverseVideo:        false
XTerm*reverseWrap:         true
XTerm*scrollTtyOutput:     on
XTerm*scrollKey:           on
XTerm*scrollstyle:         plain
XTerm*eightBitInput:       false

! solve screen switch flicker
XTerm*visualBell:          false
XTerm*urgentOnBell:        false

XTerm*cutNewline:          true
XTerm*allowTitleOps:       false

XTerm*title:               Terminal
xterm*VT100.geometry:      80*32

XTerm*selectToClipboard:   true
XTerm*charClass:           33:48,35:48,37:48,43:48,45-47:48,64:48,95:48,126:48

!*cursorUnderLine:         true
!*cursorBlink:             on
!*cursorOffTime:           300
!*cursorOnTime:            900

Xft.antialias:             1
Xft.autohint:              0
Xft.dpi:                   96
Xft.hinting:               1
Xft.hintstyle:             hintfull
Xft.lcdfilter:             lcddefault
Xft.rgba:                  rgb

XTerm*utf8:                true
xterm*utf8Title:           true
XTerm*allowBoldFonts:      false
XTerm*renderFont:          true
XTerm*font:                xft:DejaVu Sans Mono:pixelsize=13.5:antialias=true:hinting=true
XTerm*faceSize:            13.5
XTerm*faceName:            DejaVu Sans Mono
XTerm*boldFont:            xft:DejaVu Sans Mono:bold:pixelsize=13.5:antialias=true:hinting=true
xterm*faceNameDoublesize:  WenQuanYi Micro Hei Mono:pixelsize=16:antialias=true

!true, CJK text column width of 2: if set this, tmux pane border will disappear
!xterm*cjkWidth:            true

! Disable all bold font
!*boldFont:

!*faceName:           Monospace
!*faceName:           Liberation Mono
!*faceSize:           12.5
!*faceName:           Liberation Mono
!*fontdefault:        xft:Liberation Mono:pixelsize=18:antialias=true:hinting=true
!*boldFont:           xft:Liberation Mono:bold:pixelsize=18:antialias=true:hinting=true
!*font:               fixed
!*font:               -*-terminus-medium-r-*-*-14-*-*-*-*-*-iso10646-*
!*font:               -*-terminus-medium-r-normal--18-*-*-*-*-*-iso10646-1
!*font:               -*-Monospace-medium-r-*-*-14-*-*-*-*-*-*-*
!*font:               DejaVu Sans Mono:pixelsize=13


!*************************** XTerm *************************************
XTerm*termName:            xterm-256color
XTerm*allowSendEvents:     true
XTerm*metaSendsEscape:     true
xterm*altSendsEscape:      true

XTerm*iconName:            Terminal
XTerm*cursorOnTime:        300
XTerm*VT100*titeInhibit:   true

!! Fix up xterm keybindings
!xterm*VT100.translations: #override \
!       <Key>BackSpace:    string(0x7F) \n\
!       <Key>Insert:       string(0x1b) string("[2~")\n\
!       <Key>Delete:       string(0x1b) string("[3~")\n\
!       <Key>Home:         string(0x1b) string("[1~")\n\
!       <Key>End:          string(0x1b) string("[4~")\n\
!       <Key>Page_Up:      string(0x1b) string("[5~")\n\
!       <Key>Page_Down:    string(0x1b) string("[6~")\n\
!       <KeyPress>Prior:   scroll-back(1,page)\n\
!       <KeyPress>Next:    scroll-forw(1,page)


